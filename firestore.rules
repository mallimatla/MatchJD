rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(tenantId) {
      return isAuthenticated() && request.auth.uid == tenantId;
    }

    function hasValidTenantId() {
      return request.resource.data.tenantId == request.auth.uid;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
    }

    // Projects collection - tenant isolated
    match /projects/{projectId} {
      allow read: if isOwner(resource.data.tenantId);
      allow create: if isAuthenticated() && hasValidTenantId();
      allow update: if isOwner(resource.data.tenantId);
      allow delete: if isOwner(resource.data.tenantId);
    }

    // Documents collection - tenant isolated
    match /documents/{documentId} {
      allow read: if isOwner(resource.data.tenantId);
      allow create: if isAuthenticated() && hasValidTenantId();
      allow update: if isOwner(resource.data.tenantId);
      allow delete: if isOwner(resource.data.tenantId);
    }

    // Parcels collection - tenant isolated
    match /parcels/{parcelId} {
      allow read: if isOwner(resource.data.tenantId);
      allow create: if isAuthenticated() && hasValidTenantId();
      allow update: if isOwner(resource.data.tenantId);
      allow delete: if isOwner(resource.data.tenantId);
    }

    // HITL Requests collection - tenant isolated
    match /hitlRequests/{requestId} {
      allow read: if isOwner(resource.data.tenantId);
      allow create: if isAuthenticated() && hasValidTenantId();
      allow update: if isOwner(resource.data.tenantId);
      // No delete allowed - audit trail
    }

    // Workflows collection - tenant isolated
    match /workflows/{workflowId} {
      allow read: if isOwner(resource.data.tenantId);
      // Create/update only via Cloud Functions
      allow create: if false;
      allow update: if false;
    }
  }
}
